{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "SPECIFICATION.md",
            "README.md"
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png|webp)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            }
        ]
    },
    "database": {
        "rules": "database.rules.json"
    }
}